<section id="add">
	<form action="/" method="post">
		<p>
			<textarea name="topic" placeholder="Topic"></textarea>
		</p>
		<p>
			<textarea name="presenter" placeholder="Your name"></textarea>
		</p>
		<p>
			<textarea name="link" placeholder="A link to your stuff&hellip;"></textarea>
		</p>
		<input type="submit" value="Enqueue">
	</form>
</section>

<% @presentations.each do |p| %>
	<article <%= 'class="complete"' if p.complete%>>
		<p>
			<a href="http://<%= p.link %>/"><%= p.topic %></a>
			<span><a href="/<%= p.id %>">[edit]</a></span>
		</p>
		<p class="links">
			<a href="/<%= p.id %>/complete">&#8623;</a>
		</p>
		<p class="meta">
			<%= p.presenter %>
		</p>
		<p class="meta">
			Created: <%= p.created_at %>
		</p>
	</article>
<% end %>
